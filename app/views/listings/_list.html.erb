<h1>Listing </h1>

<%= link_to "Create Listing", new_listing_path %>

<div id="filterrific_results">
<table class="table">
<tr>
<th>id</th>	
<th>Title</th>
<th>Address</th>
<th><%= filterrific_sorting_link(@filterrific, :price) %></th>
<th>Actions</th>
<td
</tr>
<% @listings.each do |listing| %>
<tr>
	<td><%= listing.id %></td>
	<td><%= listing.title %></td>
	<td><%= listing.address %></td>
	<td><%= listing.price %></td>
	<td>
	<% if !listing.avatars.empty? %>
		<% listing.avatars.each do |pic|%>
			<%= image_tag pic.thumb %>
		<% end %>
	<% end %>
	</td>
	<% if signed_in? && current_user.id == listing.user_id %>
		<td><%= link_to "Edit", edit_listing_path(listing) %></td>
		<td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
<td><%= link_to "More info", listing_path(listing) %></td>
	</tr>
<% end %>
</table>


</div>